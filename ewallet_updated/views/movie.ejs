<%- include('partial/header') %>
      <div class="container-fluid">
        <div class="row">
            <%- include('partial/sidebar') %>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <h3>Movie Ticket Booking</h3>
                        
                    </div>
                    <div class="col-lg-12">
                        
                        <% if(msg){ %>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                              <strong><%= msg %></strong> 
                            </div>
                            
                            <script>
                              $(".alert").alert();
                            </script>
                            <% } %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/movie" method="post">
                            <div class="form-group">
                                <label for="">MovieName</label>
                                <select class="form-control" name="details1" id="m1" onchange="fun1();">
                                  <option>Dhoom1</option>
                                  <option>Dhoom2</option>
                                  <option>Krish</option>
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="">Theatre</label>
                                <select class="form-control" name="details2" id="m2"  onchange="fun1();">
                                  <option>Bioscope</option>
                                  <option>Carnival</option>
                                  <option>Arti</option>
                                </select>
                              </div>
                              <div class="form-group">
                                <label for="">No Of Ticket</label>
                                <input type="number" min="1" value="1"  onchange="fun1();"
                                  class="form-control" name="details3" id="m3" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">*</small>
                              </div>
                              <div class="form-group">
                                <label for="">Date</label>
                                <input type="date"
                                  class="form-control" name="details4" id="" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">*</small>
                              </div>
                              <div class="form-group">
                                <label for="">Time</label>
                                <select class="form-control" name="details5" id="">
                                  <option>11:30AM</option>
                                  <option>3:00PM</option>
                                  <option>5:50PM</option>
                                  <option>9:30PM</option>
                                </select>
                              </div>
                        <div class="form-group">
                            <label for="">Amount</label>
                            <input type="number" readonly
                              class="form-control" name="amount" id="m4" aria-describedby="helpId" placeholder="">
                            <small id="helpId" class="form-text text-muted">*</small>
                          </div>
                          
                          <button type="submit" class="btn btn-primary">Book Now</button>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
      </div>
      <%- include('partial/footer') %>
      <script>
        function fun1()
        {
            var x1=document.getElementById("m1").value;
            var x2=document.getElementById("m2").value;
            var x3=document.getElementById("m3").value;
            if(x1=="Dhoom1")
            {
                if(x2=="Bioscope")
                {
                document.getElementById("m4").value=50*parseInt(x3);
                }
                if(x2=="Carnival")
                {
                document.getElementById("m4").value=70*parseInt(x3);
                }
                if(x2=="Arti")
                {
                document.getElementById("m4").value=150*parseInt(x3);
                }
            }
            if(x1=="Dhoom2")
            {
                if(x2=="Bioscope")
                {
                document.getElementById("m4").value=120*parseInt(x3);
                }
                if(x2=="Carnival")
                {
                document.getElementById("m4").value=170*parseInt(x3);
                }
                if(x2=="Arti")
                {
                document.getElementById("m4").value=110*parseInt(x3);
                }
            }
            if(x1=="Krish")
            {
                if(x2=="Bioscope")
                {
                document.getElementById("m4").value=90*parseInt(x3);
                }
                if(x2=="Carnival")
                {
                document.getElementById("m4").value=60*parseInt(x3);
                }
                if(x2=="Arti")
                {
                document.getElementById("m4").value=80*parseInt(x3);
                }
            }
        }
      </script>